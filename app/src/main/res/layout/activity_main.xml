<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Save & Go Home Button (top right) -->
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save & Go Home"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date Header -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today is 23rd July 2025."
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnGoHome"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Icon Navigation Row -->
    <LinearLayout
        android:id="@+id/iconRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:gravity="center">

    </LinearLayout>

    <!-- Prompt -->
    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write about the dayâ€™s events and feelings."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iconRow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Title EditText -->
    <EditText
        android:id="@+id/titleInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start with a title to remember this day."
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Journal Body EditText -->
    <EditText
        android:id="@+id/journalBodyInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Today, I..."
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:gravity="top|start"
        android:minLines="8"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/titleInput"
        app:layout_constraintBottom_toTopOf="@id/saveContinueBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Save & Continue Button -->
    <Button
        android:id="@+id/saveContinueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save & Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
